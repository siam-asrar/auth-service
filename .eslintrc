{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": "error",
    "no-undefined": "error",
    "no-unused-expressions": "error",
    "no-unreachable": "error",
    "no-unused-vars": "error",
    "consistent-type-definitions": [
      "error",
      "type"
    ]
  },
  "env": {
    "browser": true,
    "es2021": true
  }
}